<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PageRu.AppShell"
             xmlns:local="clr-namespace:PageRu"
             xmlns:views="clr-namespace:PageRu.Views">

    <Shell.Resources>
        <Style TargetType="TabBar" BasedOn="{x:StaticResource Shell}" />
        <Style TargetType="FlyoutItem" BasedOn="{x:StaticResource Shell}" />
    </Shell.Resources>

    <TabBar>
        <ShellContent Title="Заметки" Icon="align_text_center_96px.png" Route="NotesPage" ContentTemplate="{DataTemplate views:NotesPage}"/>
        <!--<ShellContent Title="О приложении" Icon="info_96px.png" ContentTemplate="{DataTemplate views:AboutPage}"/>-->
    </TabBar>
</Shell>